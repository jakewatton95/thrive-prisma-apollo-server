type Company {
  idcompany: Int! @id
  name: String!
  address: String
}

type User {
  iduser: Int! @id
  company: Company!
  email: String! @unique
  role: String!
}

type Student {
  idstudent: Int! @id
  name: String!
  phone: String!
  user: User! @unique
}

type Tutor {
  idtutor: Int! @id
  name: String!
  phone: String!
  user: User! @unique
}

type Admin {
  idadmin: Int! @id
  name: String!
  phone: String!
  user: User! @unique
}

type Product {
  idproduct: Int! @id
  student: Student!
  tutor: Tutor!
  active: Boolean! @default(value: true)
  company: Company!
  rate: Float!
  tutorshare: Float!
  subject: String!
}

type Session {
  idsession: Int! @id
  product: Product!
  date: DateTime!
  length: Float!
  location: String!  
  studentconfirmed: Boolean! @default(value: false)
  tutorconfirmed: Boolean! @default(value: false)
  invoiced: Boolean! @default(value: false)
  note: Note @relation(name: "AdminNote")
  studentnote: Note @relation(name: "StudentNote")
  tutornote: Note @relation(name: "TutorNote")
}

type Invoice {
  idinvoice: Int! @id
  session: Session!
  date: DateTime! @createdAt
  paid: Boolean! @default(value: false)
  note: Note
}

type Note {
  idnote: Int! @id
  user: User!
  text: String!
}